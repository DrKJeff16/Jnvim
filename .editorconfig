root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
max_line_length = 120

[*.py]
max_line_length = 100

[{Makefile,*.mk}]
indent_style = tab
tab_width = 8
indent_size = 8

[*.txt]
indent_style = tab
tab_width = 8
indent_size = 8
max_line_length = 200
