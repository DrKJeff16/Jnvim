root = true

[*.lua,*.toml,*.bash,*.sh,*.bash]
tab_width = 4
indent_size = 4
indent_style = space
max_line_length = 100
end_of_line = lf
insert_final_newline = true

[*.txt,*.md,*.yml,*.yaml]
tab_width = 2
indent_size = 2
indent_style = space
max_line_length = 120
end_of_line = lf
insert_final_newline = true
